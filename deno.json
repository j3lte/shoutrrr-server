{
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "useTabs": false,
      "singleQuote": false,
      "lineWidth": 100,
      "proseWrap": "preserve"
    },
    "files": {
      "exclude": []
    }
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "tasks": {
    "server": "deno run --allow-read --allow-net --allow-env --allow-run --watch server/main.ts"
  },
  "imports": {
    "@oak/oak": "jsr:@oak/oak@^17.1.4"
  }
}
